doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Create Tournament
    body 
      form(action='/createTournament', method='POST')
        div Name 
        input(type='text', name='name', value='')
        br
        br
        div Players (DELIMITER: ";"): 
        input(type='text', name='players', value='')
        br
        br
        div Scoring type (): 
        select(name='scoring_type')
            option(value=0) 3/1/0 (nogomet)
            option(value=1) 1/0,5/0 (šah)
            option(value=2) 2/0/1 (košarka)
        br
        br

        input(type='submit', value='Submit')